<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svhome"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lohome"
        android:background="#f2f0f0"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="1dp"
            android:divider="#E6E6E6"
            android:dividerHeight="5px"
            >
            <ImageView
                android:id="@+id/imagetype"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="50dp"
                app:srcCompat="@drawable/event"

                />

            <ImageView
                android:id="@+id/hprofile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/title12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:text="@string/account_name"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/event_type"
                android:text="@string/event_type"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000"
                />


            <TextView
                android:id="@+id/des1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_below="@id/event_type"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="80dp"
                android:text="@string/description"
                android:textStyle="normal"
                android:elegantTextHeight="true"
                android:textColor="#000"

                />

            <ImageView
                android:layout_marginTop="107dp"
                android:id="@+id/imageViewsnap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/egypt"

                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_below="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardElevation="5dp"
            android:layout_marginTop=".5dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="1dp"
            android:divider="#E6E6E6"
            android:dividerHeight="5px"

            >
            <TextView
                android:id="@+id/commhn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/number_comment" />

            <TextView
                android:id="@+id/likehn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="15dp"
                android:text="@string/number_like" />

            <TextView
                android:id="@+id/sharen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="15dp"
                android:text="@string/number_share" />

        </android.support.v7.widget.CardView>







